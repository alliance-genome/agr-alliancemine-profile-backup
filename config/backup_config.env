# PostgreSQL Backup Configuration
# Update these values according to your setup

# Database Configuration
export DB_HOST=""
export DB_NAME=""
export DB_USER=""

# Backup Configuration  
export DAILY_RETENTION_DAYS=7
export WEEKLY_RETENTION_DAYS=90

# Advanced Settings
export BACKUP_COMPRESSION_LEVEL=9  # 1-9, higher = more compression
export CONNECTION_TIMEOUT=10       # Database connection timeout in seconds

# S3 Configuration (optional - if not set, backups will only be stored locally)
export S3_BUCKET=""                 # S3 bucket name (e.g., "my-postgres-backups")
export S3_PREFIX=""                 # S3 prefix/folder (e.g., "production/postgres" - optional)
export S3_STORAGE_CLASS="STANDARD"  # S3 storage class: STANDARD, STANDARD_IA, GLACIER, etc.
export S3_REGION=""                 # AWS region (e.g., "us-east-1" - optional if using default)
export S3_ENDPOINT=""               # Custom S3 endpoint (optional - for S3-compatible services)
export KEEP_LOCAL_BACKUPS="true"    # Keep local copies after S3 upload (true/false)
